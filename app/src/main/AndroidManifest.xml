    xmlns:tools="http://schemas.android.com/tools"
    package="com.tony_fire.descorder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DescOrder.NoToolbar"
        tools:replace="android:theme">
        <activity android:name="com.FilterActivity" android:theme="@style/FilterTheme">

        </activity>
        <activity android:name="com.screens.Choose_images" />
        <activity android:name="com.ShowAddActivityActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.EditActivity" /> <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3005857137279781~1835992556" />
    </application>

</manifest>